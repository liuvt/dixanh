@inject NavigationManager Nav
@inject HttpClient Http

<div class="relative">
    <!-- Button (icon) -->
    <button type="button"
            class="inline-flex items-center justify-center rounded-lg p-2 hover:bg-slate-100"
            aria-label="Authentication.."
            @onclick="ToggleMenu">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20"
             stroke-width="1.5" stroke="currentColor" class="size-5">
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
        </svg>
    </button>

    @if (_open)
    {
        <!-- Backdrop bắt click ra ngoài để đóng -->
        <div class="fixed inset-0 z-40" @onclick="CloseMenu"></div>

        <!-- Dropdown -->
        <div class="absolute right-0 z-50 mt-2 w-max max-w-[320px] min-w-[220px] rounded-xl border border-slate-200 bg-white shadow-lg">

            <a class="block overflow-hidden px-4 py-2 font-sans text-sm text-ellipsis whitespace-nowrap text-gray-950 hover:bg-slate-50"
               href="/"
               @onclick="CloseMenu">
                Thông tin
            </a>

            <a class="block overflow-hidden px-4 py-2 font-sans text-sm text-ellipsis whitespace-nowrap text-gray-950 hover:bg-slate-50"
               href="/"
               @onclick="CloseMenu">
                Cài đặt
            </a>
            <a class="block overflow-hidden px-4 py-2 font-sans text-sm text-ellipsis whitespace-nowrap text-gray-950 hover:bg-slate-50"
               href="/"
               @onclick="CloseMenu">
                Trợ giúp
            </a>

            <div class="my-1 border-t border-slate-200"></div>
            
            <form method="post" action="/api/auth/logout-cookie">
                <button type="submit"
                        class="w-full overflow-hidden px-4 py-2 text-left font-sans text-sm text-ellipsis whitespace-nowrap text-rose-600 hover:bg-rose-50">
                    Đăng xuất
                </button>
            </form>
        </div>
    }
</div>

@code {
    private bool _open;

    private void ToggleMenu() => _open = !_open;
    private void CloseMenu() => _open = false;

    
}