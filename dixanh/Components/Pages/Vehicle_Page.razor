@page "/vehicles-test"
@inherits VehicleBase

<PageTitle>Quản lý xe - Đi Xanh</PageTitle>
<AuthorizeView Context="authContext">
    <Authorized>

        <!-- Main -->
        <main class="flex-1 p-2">
            <!-- Breadcrumb + title -->
            <div class="mb-4">
                <div class="text-sm text-slate-500">Dashboard / <span class="text-slate-700">List vehicle</span></div>
                <div class="mt-1 text-2xl font-semibold text-slate-900">List vehicle</div>
            </div>

            <!-- Filter card -->
            <section class="rounded-xl border border-slate-200 bg-white shadow-sm">
                <div class="p-4">
                    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 xl:grid-cols-5">
                        <div>
                            <label class="text-sm font-medium text-slate-700">Mã xe</label>
                            <input class="mt-1 w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500"
                                   placeholder="MaXe" />
                        </div>
                        <div>
                            <label class="text-sm font-medium text-slate-700">Biển kiểm soát</label>
                            <input class="mt-1 w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500"
                                   placeholder="68G-000.01" />
                        </div>
                        <div>
                            <label class="text-sm font-medium text-slate-700">Số hiệu xe</label>
                            <input class="mt-1 w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500"
                                   placeholder="RG7032" />
                        </div>
                        <div>
                            <label class="text-sm font-medium text-slate-700">Thương hiệu</label>
                            <input class="mt-1 w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500"
                                   placeholder="Vinfast VF5" />
                        </div>
                        <div>
                            <label class="text-sm font-medium text-slate-700">Loại xe</label>
                            <select class="mt-1 w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500">
                                <option value="">All</option>
                                <option>Xe điện</option>
                                <option>Xe xăng</option>
                            </select>
                        </div>

                        <div>
                            <label class="text-sm font-medium text-slate-700">Số chỗ</label>
                            <input type="number"
                                   class="mt-1 w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500"
                                   placeholder="4" />
                        </div>
                        <div>
                            <label class="text-sm font-medium text-slate-700">Màu xe</label>
                            <input class="mt-1 w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500"
                                   placeholder="Xanh 1 / Trắng ..." />
                        </div>
                        <div>
                            <label class="text-sm font-medium text-slate-700">Ngày SX</label>
                            <div class="mt-1 grid grid-cols-2 gap-2">
                                <input type="date" class="w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500" />
                                <input type="date" class="w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500" />
                            </div>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-slate-700">Số khung</label>
                            <input class="mt-1 w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500"
                                   placeholder="RLNV..." />
                        </div>
                        <div>
                            <label class="text-sm font-medium text-slate-700">Số máy</label>
                            <input class="mt-1 w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500"
                                   placeholder="VFCA..." />
                        </div>

                        <div>
                            <label class="text-sm font-medium text-slate-700">Người tạo</label>
                            <input class="mt-1 w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500"
                                   placeholder="Lưu Văn" />
                        </div>
                        <div>
                            <label class="text-sm font-medium text-slate-700">Thời gian tạo</label>
                            <div class="mt-1 grid grid-cols-2 gap-2">
                                <input type="datetime-local" class="w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500" />
                                <input type="datetime-local" class="w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500" />
                            </div>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-slate-700">Thời gian cập nhật</label>
                            <div class="mt-1 grid grid-cols-2 gap-2">
                                <input type="datetime-local" class="w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500" />
                                <input type="datetime-local" class="w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500" />
                            </div>
                        </div>

                        <div>
                            <label class="text-sm font-medium text-slate-700">Trạng thái xe</label>
                            <select class="mt-1 w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500">
                                <option value="">All</option>
                                <option>Đang hoạt động</option>
                                <option>Bảo dưỡng</option>
                                <option>Ngưng</option>
                            </select>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-slate-700">Khu vực</label>
                            <select class="mt-1 w-full rounded-lg border-slate-300 focus:border-emerald-500 focus:ring-emerald-500">
                                <option value="">All</option>
                                <option>Rạch Giá</option>
                                <option>Cần Thơ</option>
                                <option>Phú Quốc</option>
                                <option>Sóc Trăng</option>
                                <option>Hậu Giang</option>
                                <option>Cà Mau</option>
                            </select>
                        </div>
                    </div>

                    <div class="mt-4 flex flex-wrap justify-end gap-2">
                        <button class="rounded-lg border border-slate-300 bg-white px-4 py-2 text-slate-700 hover:bg-slate-50">
                            Reset
                        </button>
                        <button class="rounded-lg border border-slate-300 bg-white px-4 py-2 text-slate-700 hover:bg-slate-50">
                            Settings
                        </button>
                        <button class="rounded-lg bg-emerald-600 px-4 py-2 font-semibold text-white hover:bg-emerald-700">
                            Search
                        </button>
                        <button class="rounded-lg border border-slate-300 bg-white px-4 py-2 text-slate-700 hover:bg-slate-50">
                            Export
                        </button>
                        <button class="rounded-lg border border-slate-300 bg-white px-4 py-2 text-slate-700 hover:bg-slate-50">
                            Import
                        </button>
                    </div>
                </div>
            </section>

            <!-- Table card -->
            <section class="mt-6 rounded-xl border border-slate-200 bg-white shadow-sm">
                <div class="flex items-center justify-between p-4">
                    <div class="text-sm text-slate-700">
                        <span class="font-semibold">Total record:</span> 310
                    </div>
                    <button class="rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm text-slate-700 hover:bg-slate-50">
                        Settings ▾
                    </button>
                </div>

                <div class="overflow-auto border-t border-slate-200">
                    <table class="w-full min-w-[1200px] text-sm">
                        <thead class="sticky top-0 bg-slate-50">
                            <tr class="text-left text-slate-600">
                                <th class="px-4 py-3 font-medium">MaXe</th>
                                <th class="px-4 py-3 font-medium">Biển số</th>
                                <th class="px-4 py-3 font-medium">Số hiệu</th>
                                <th class="px-4 py-3 font-medium">Thương hiệu</th>
                                <th class="px-4 py-3 font-medium">Số chỗ</th>
                                <th class="px-4 py-3 font-medium">Màu</th>
                                <th class="px-4 py-3 font-medium">Ngày SX</th>
                                <th class="px-4 py-3 font-medium">Loại xe</th>
                                <th class="px-4 py-3 font-medium">Số khung</th>
                                <th class="px-4 py-3 font-medium">Số máy</th>
                                <th class="px-4 py-3 font-medium">Người tạo</th>
                                <th class="px-4 py-3 font-medium">Tạo lúc</th>
                                <th class="px-4 py-3 font-medium">Cập nhật</th>
                                <th class="px-4 py-3 font-medium">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-200">
                            <tr class="hover:bg-slate-50">
                                <td class="px-4 py-3 text-slate-900">77daf2429c...</td>
                                <td class="px-4 py-3">68G-000.45</td>
                                <td class="px-4 py-3">RG7032</td>
                                <td class="px-4 py-3">Vinfast VF5</td>
                                <td class="px-4 py-3">4</td>
                                <td class="px-4 py-3">Xanh 1</td>
                                <td class="px-4 py-3">28/01/2026</td>
                                <td class="px-4 py-3">
                                    <span class="inline-flex items-center rounded-full border border-emerald-200 bg-emerald-50 px-2 py-0.5 text-emerald-700">
                                        Xe điện
                                    </span>
                                </td>
                                <td class="px-4 py-3">RLNVJ5J...</td>
                                <td class="px-4 py-3">VFCAFB...</td>
                                <td class="px-4 py-3">Lưu Văn</td>
                                <td class="px-4 py-3">25/01/2028 16:06:03</td>
                                <td class="px-4 py-3">25/01/2028 16:06:03</td>
                                <td class="px-4 py-3">
                                    <div class="flex items-center gap-2">
                                        <button class="rounded border border-slate-300 px-2 py-1 hover:bg-slate-50">View</button>
                                        <button class="rounded border border-slate-300 px-2 py-1 hover:bg-slate-50">Edit</button>
                                        <button class="rounded border border-slate-300 px-2 py-1 hover:bg-slate-50">History</button>
                                    </div>
                                </td>
                            </tr>
                            <!-- ... rows -->
                        </tbody>
                    </table>
                </div>

                <!-- Footer / pagination placeholder -->
                <div class="flex items-center justify-between p-4 text-sm text-slate-600">
                    <div>Showing 1–20</div>
                    <div class="flex items-center gap-2">
                        <button class="rounded border border-slate-300 px-3 py-1.5 hover:bg-slate-50">Prev</button>
                        <button class="rounded border border-slate-300 px-3 py-1.5 hover:bg-slate-50">Next</button>
                    </div>
                </div>
            </section>
        </main>
    </Authorized>
    <NotAuthorized>

    </NotAuthorized>
</AuthorizeView>
