@page "/"
@page "/login"
@inherits AppLoginBase
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@layout MainEmptyLayout

<PageTitle>Đăng nhập tài khoản - Đi Xanh</PageTitle>

<div class="flex min-h-screen items-center justify-center bg-slate-50">
    <AuthorizeView Context="authContext">
        <NotAuthorized>
            <div class="w-full max-w-md">
                <div class="mb-6 text-center">
                    <h1 class="text-2xl font-semibold text-slate-900">Đăng nhập tài khoản</h1>
                    <p class="mt-1 text-sm text-slate-500">
                        Nhập email và mật khẩu để truy cập hệ thống.
                    </p>
                </div>

                <div class="rounded-2xl bg-white shadow-sm ring-1 ring-slate-200">
                    <EditForm Model="@models" OnValidSubmit="OnValidSubmit">
                        <DataAnnotationsValidator />

                        <div class="space-y-4 p-6">
                            <!-- Email -->
                            <div>
                                <label class="block text-sm font-medium text-slate-700">Email</label>
                                <p class="mt-1 text-xs text-slate-500">Hỗ trợ: Gmail, Yahoo, Hotmail, Outlook,..</p>
                                <input class="@InputClass(_processing)"
                                       type="email"
                                       autocomplete="email"
                                       placeholder="owner@dixanh.com"
                                       @bind="models.Email"
                                       disabled="@_processing" />
                            </div>

                            <!-- Password -->
                            <div>
                                <label class="block text-sm font-medium text-slate-700">Mật khẩu</label>
                                <p class="mt-1 text-xs text-slate-500">Vui lòng bảo vệ mật khẩu!</p>

                                <div class="relative mt-2">
                                    <input class="@($"{InputClass(_processing)} pr-12")"
                                           type="@(_showPassword ? "text" : "password")"
                                           autocomplete="current-password"
                                           placeholder="••••••••"
                                           @bind="models.Password"
                                           disabled="@_processing" />

                                    <button type="button"
                                            class="absolute inset-y-0 right-0 px-4 text-slate-500 hover:text-slate-700 disabled:opacity-50"
                                            disabled="@_processing"
                                            @onclick="TogglePassword"
                                            aria-label="Hiện/ẩn mật khẩu">
                                        @if (_showPassword)
                                        {
                                            <!-- eye-off -->
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 3l18 18" />
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M10.477 10.48a3 3 0 004.243 4.243" />
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M9.88 9.88A3 3 0 0112 9c1.657 0 3 1.343 3 3 0 .407-.081.795-.228 1.149" />
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M6.228 6.228C4.58 7.493 3.3 9.156 2.458 12c1.274 4.057 5.065 7 9.542 7 1.557 0 3.043-.356 4.387-.999" />
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 5c1.61 0 3.147.38 4.52 1.05" />
                                            </svg>
                                        }
                                        else
                                        {
                                            <!-- eye -->
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            </svg>
                                        }
                                    </button>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="flex items-center justify-between pt-2">
                                <!-- Reset -->
                                <button type="button"
                                        class="inline-flex items-center justify-center rounded-xl border border-rose-200 bg-rose-50 px-3 py-2 text-rose-700 hover:bg-rose-100 focus:ring-4 focus:ring-rose-100 focus:outline-none disabled:opacity-50"
                                        disabled="@_processing"
                                        @onclick="CleanForm">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-3-6.708M21 3v6h-6" />
                                    </svg>
                                    <span class="ml-2 text-sm font-semibold">Làm mới</span>
                                </button>

                                <!-- Submit -->
                                <button type="submit"
                                        class="@SubmitClass(_processing)"
                                        disabled="@_processing">
                                    @if (_processing)
                                    {
                                        <svg class="h-5 w-5 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v3a5 5 0 00-5 5H4z"></path>
                                        </svg>
                                        <span class="ml-2">Đang xử lý..</span>
                                    }
                                    else
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 3h4a2 2 0 012 2v14a2 2 0 01-2 2h-4" />
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M10 17l5-5-5-5" />
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12H3" />
                                        </svg>
                                        <span class="ml-2">Đăng nhập</span>
                                    }
                                </button>
                            </div>

                            <!-- Register link -->
                            <div class="pt-2">
                                <a href="/register"
                                   class="text-sm font-medium text-emerald-700 hover:text-emerald-800">
                                    Đăng ký ngay! nếu bạn chưa có tài khoản
                                </a>
                            </div>

                            <!-- Errors -->
                            <div class="space-y-2">
                                <div class="rounded-xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
                                    <ValidationSummary />
                                </div>

                                @if (!string.IsNullOrWhiteSpace(textResult))
                                {
                                    <div class="rounded-xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
                                        @textResult
                                    </div>
                                }
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>
<!-- Ds ảnh brand swiper-->
<SwiperBrand />

@code {
    private bool _showPassword;

    private void TogglePassword()
    {
        _showPassword = !_showPassword;
    }

    private static string InputClass(bool disabled) =>
        "mt-2 block w-full rounded-xl border border-slate-200 bg-white px-4 py-2.5 text-slate-900 shadow-sm outline-none " +
        "focus:border-emerald-500 focus:ring-4 focus:ring-emerald-100 " +
        (disabled ? "opacity-60 cursor-not-allowed" : "");

    private static string SubmitClass(bool disabled) =>
        "inline-flex items-center justify-center rounded-xl bg-emerald-600 px-4 py-2.5 text-white font-semibold " +
        "shadow-sm hover:bg-emerald-700 focus:outline-none focus:ring-4 focus:ring-emerald-200 " +
        (disabled ? "opacity-70 cursor-not-allowed" : "");
}